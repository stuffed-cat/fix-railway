# Project properties for Gradle
group = com.example.fixrailway
version = 1.0.0
archivesBaseName = fix-railway

# Minecraft and Forge versions
minecraft_version = 1.19.2
forge_version = 43.3.8

# Java version
java_version = 17
org.gradle.jvmargs=-Xmx3G
org.gradle.daemon=false

# Enable or disable the use of the shadow plugin
shadowJar = true

# 网络设置
systemProp.http.nonProxyHosts=*.minecraft.net|*.forge-systems.net|*.fabricmc.net|*.github.com|*.maven.apache.org|*.maven.minecraftforge.net
systemProp.https.nonProxyHosts=*.minecraft.net|*.forge-systems.net|*.fabricmc.net|*.github.com|*.maven.apache.org|*.maven.minecraftforge.net
systemProp.javax.net.ssl.trustStoreType=Windows-ROOT

# 禁用SSL验证（不推荐用于生产环境，仅用于开发）
systemProp.ssl.TrustManager.algorithm=PKIX
systemProp.jdk.tls.client.protocols=TLSv1.2

# 代理设置（如果需要，请取消注释并配置）
# systemProp.http.proxyHost=127.0.0.1
# systemProp.http.proxyPort=7890
# systemProp.https.proxyHost=127.0.0.1
# systemProp.https.proxyPort=7890

# 添加其他网络配置
systemProp.sun.net.client.defaultConnectTimeout=10000
systemProp.sun.net.client.defaultReadTimeout=30000
systemProp.java.net.preferIPv4Stack=true

# Forge specific settings
# Disable Forge's default SSL certificate validation
systemProp.forge.disableVersionCheck=true
systemProp.forge.disableSslValidation=true

# Additional properties can be added as needed
